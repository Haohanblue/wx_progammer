/* index.wxss */

/* 轮播图样式 */
.swiper {
    width: 100%;
    height: 20%; /* 调整轮播图的高度 */
    background-color: #f5f5f5; /* 设置背景颜色 */
}

.swiper-img {
    width: 100%;
    height: 100%;
}

/* 容器样式 */
.container {
    padding: 20rpx;
    background-color:rgba(191, 238, 224, 0.034); /* 设置背景颜色 */
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
    height: 100vh;
}

/* 类别栏目样式 */
.category-list {
    display: flex;
    margin-top: 20rpx;
    width: 100%;
    height: 80%;
}

.category {
    flex: 1;
    padding-right: 10rpx;
    display: flex; /* 使用 flex 布局 */
    flex-direction: column; /* 垂直布局 */
    flex-grow: 1; /* 让子元素填充整个垂直空间 */
    background-color: rgb(245, 236, 236);
}

.category-item {
    display: flex; /* 使用 Flexbox 布局 */
    justify-content: center; /* 水平居中 */
    align-items: center; /* 垂直居中 */
    flex-grow: 1; /* 让子元素填充整个垂直空间 */
    display: flex;
    padding: 30rpx 0;
    cursor: pointer;
    border: rgba(0, 0, 0, 0.1) solid 1rpx;
    text-align: center;
    background-color: white;
    margin-bottom: 15rpx;
    margin-left: 10rpx;
    margin-top: 15rpx;
}

/* 商品栏目样式 */
.product-list {
    flex: 3;
    display: flex; /* 使用 flex 布局 */
    flex-direction: column; /* 垂直布局 */
}

.item {
    display: flex;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    border: 1rpx solid #e0e0e0; /* 添加商品项的边框 */
    padding: 20rpx; /* 添加内边距 */
    border-radius: 80rpx; /* 添加圆角 */
    box-shadow: 0 10rpx 4rpx rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
    flex-grow: 1; /* 让子元素填充整个垂直空间 */
    background-color: rgb(236, 231, 231);
}
.view_image{
  margin-left: 10rpx;
  margin-top: 10rpx;
  width: 100rpx;
  margin-right: 10rpx;
  border-radius: 100rpx; /* 添加圆角 */
  height: 100rpx;
}
.item_img {
    width: 100%;
    height: 100%; 
    border-radius: 100rpx; /* 添加圆角 */
}

.item_right {
    flex: 1;
}

.item_name {
    font-weight: bold;
    margin-bottom: 5rpx;
    color: #333333; /* 修改字体颜色 */
}

.item_bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.item_coin {
    margin-right: 10rpx;
    color: red; /* 修改报酬字体颜色 */
    font-weight: bold;
    font-size: 35rpx;
}

.item_btn {

    padding: 5rpx 10rpx;
    background-color: #3bda63;
    color: #fff;
    border-radius: 5rpx;
    cursor: pointer;
    border-radius: 80rpx; /* 添加圆角 */
}
.item-scroll {
    height: 100%; /* 设置滚动窗口的高度 */
    padding-right: 10rpx;
}