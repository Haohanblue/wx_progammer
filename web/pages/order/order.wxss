.tab-bar {
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: #28a745;
    color: white;
    padding: 10px;
  }
  
  .tab {
    cursor: pointer;
  }
  
  .container {
    padding: 10px;
  }
  
/* 样式可能需要根据实际需要进行调整 */

.task-item {
  border: 1px solid #ccc;
  padding: 10px;
  margin-bottom: 10px;
  display: flex;
  align-items: center;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}
.text-block {
    flex-grow: 1;
  }
  .title {
    font-weight: bold;
  }
  
  .money {
    color: #007bff; /* 调整报酬文本颜色 */
  }
  
  .finish {
    color: #28a745; /* 调整完成文本颜色 */
  }
  

  .text-button {
    display: inline-block;
    padding: 8rpx 16rpx; /* 调整按钮的内边距 */
    border-radius: 500rpx; /* 设置按钮的圆角程度 */
    background-color: #28a745; /* 设置按钮的背景色 */
    color: white; /* 设置按钮文本颜色为白色 */
    text-align: center; /* 文本居中显示 */
    cursor: pointer;
    margin-right: 30rpx;
  }
  
  .text-button .text {
    font-size: 50rpx;
    display: inline-block;
    vertical-align: middle;
    line-height: 1; /* 使文本垂直居中 */
  }
  